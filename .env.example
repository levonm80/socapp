# Docker Compose Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
POSTGRES_USER=socapp
POSTGRES_PASSWORD=change-me-in-production
POSTGRES_DB=socapp

# Backend Configuration
DATABASE_URL=postgresql://socapp:change-me-in-production@db:5432/socapp
JWT_SECRET_KEY=change-me-in-production-generate-a-secure-random-key
SECRET_KEY=change-me-in-production-generate-a-secure-random-key
OPENAI_API_KEY=sk-your-openai-api-key-here
FLASK_ENV=development
FLASK_APP=app.py

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api

# Kong Configuration
# Note: Kong doesn't support environment variable substitution in YAML files
# You must manually update kong/kong.yml with your JWT_SECRET_KEY value
# See kong/README.md for instructions
KONG_JWT_SECRET=change-me-in-production-must-match-JWT_SECRET_KEY
